@model OgrenciYonetim.Models.Ogrenciler

<h2>Öğrenci Güncelleme</h2>

<form asp-action="Guncelle" method="post">
    <div class="form-group">
        <label for="OgrenciNo">Öğrenci No:</label>
        <input type="number" class="form-control" id="OgrenciNo" name="OgrenciNo" value="@Model.OgrenciNo" readonly />
    </div>
    <div class="form-group">
        <label for="Ad">Ad:</label>
        <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" required />
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad:</label>
        <input type="text" class="form-control" id="Soyad" name="Soyad" value="@Model.Soyad" required />
    </div>
    <div class="form-group">
        <label for="Sinif">Sınıf:</label>
        <input type="number" class="form-control" id="Sinif" name="Sinif" value="@Model.Sinif" required />
    </div>
    <div class="form-group">
        <label for="DersTanimi">Ders Tanımı:</label>
        <input type="text" class="form-control" id="DersTanimi" name="DersTanimi" value="@Model.DersTanimi" required />
    </div>
    <div class="form-group">
        <label for="Kredi">Kredi:</label>
        <input type="number" class="form-control" id="Kredi" name="Kredi" value="@Model.Kredi" required />
    </div>
    <div class="form-group">
        <label for="SinavTarihi">Sınav Tarihi:</label>
        <input type="date" class="form-control" id="SinavTarihi" name="SinavTarihi" value="@Model.SinavTarihi.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="VizeNotu">Vize Notu:</label>
        <input type="number" class="form-control" id="VizeNotu" name="VizeNotu" value="@Model.VizeNotu" required />
    </div>
    <div class="form-group">
        <label for="FinalNotu">Final Notu:</label>
        <input type="number" class="form-control" id="FinalNotu" name="FinalNotu" value="@Model.FinalNotu" required />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
