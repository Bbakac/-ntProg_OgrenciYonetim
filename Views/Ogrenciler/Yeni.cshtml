@model OgrenciYonetim.Models.Ogrenciler

<h2>Yeni Öğrenci Kaydı</h2>

<form asp-action="Yeni" method="post">
    <div class="form-group">
        <label for="OgrenciNo">Öğrenci No:</label>
        <input type="number" class="form-control" id="OgrenciNo" name="OgrenciNo" required />
    </div>
    <div class="form-group">
        <label for="Ad">Ad:</label>
        <input type="text" class="form-control" id="Ad" name="Ad" required />
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad:</label>
        <input type="text" class="form-control" id="Soyad" name="Soyad" required />
    </div>
    <div class="form-group">
        <label for="Sinif">Sınıf:</label>
        <input type="number" class="form-control" id="Sinif" name="Sinif" required />
    </div>
    <div class="form-group">
        <label for="DersTanimi">Ders Tanımı:</label>
        <input type="text" class="form-control" id="DersTanimi" name="DersTanimi" required />
    </div>
    <div class="form-group">
        <label for="Kredi">Kredi:</label>
        <input type="number" class="form-control" id="Kredi" name="Kredi" required />
    </div>
    <div class="form-group">
        <label for="SinavTarihi">Sınav Tarihi:</label>
        <input type="date" class="form-control" id="SinavTarihi" name="SinavTarihi" required />
    </div>
    <div class="form-group">
        <label for="VizeNotu">Vize Notu:</label>
        <input type="number" class="form-control" id="VizeNotu" name="VizeNotu" required />
    </div>
    <div class="form-group">
        <label for="FinalNotu">Final Notu:</label>
        <input type="number" class="form-control" id="FinalNotu" name="FinalNotu" required />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
